# ملف متغيرات البيئة للإنتاج
# انسخ هذا الملف إلى .env وقم بتعديل القيم

# إعدادات Django الأساسية
DEBUG=False
SECRET_KEY=your-super-long-random-secret-key-at-least-50-characters-long-change-this
ALLOWED_HOSTS=your-domain.com,www.your-domain.com,api.your-domain.com
CSRF_TRUSTED_ORIGINS=https://your-domain.com,https://www.your-domain.com

# قاعدة البيانات PostgreSQL
DATABASE_URL=postgres://barbershop_user:your_secure_password@db:5432/barbershop
POSTGRES_DB=barbershop
POSTGRES_USER=barbershop_user
POSTGRES_PASSWORD=your_secure_password_here

# Redis للتخزين المؤقت والجلسات
REDIS_URL=redis://redis:6379/1

# إعدادات الإيميل (Gmail أو خدمة أخرى)
EMAIL_HOST_USER=noreply@your-domain.com
EMAIL_HOST_PASSWORD=your_app_password_here
DEFAULT_FROM_EMAIL=Barber Shop <noreply@your-domain.com>
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True

# Google OAuth للتسجيل الاجتماعي
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_SECRET_KEY=your_google_secret_key_here

# إعدادات الأمان للإنتاج
SECURE_SSL_REDIRECT=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True
SECURE_BROWSER_XSS_FILTER=True
SECURE_CONTENT_TYPE_NOSNIFF=True
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True

# إعدادات الموقع
SITE_NAME=Barber Shop
SITE_DOMAIN=your-domain.com

# إعدادات اختيارية للمراقبة
# SENTRY_DSN=your_sentry_dsn_here

# إعدادات AWS S3 (اختيارية لتخزين الملفات)
# AWS_ACCESS_KEY_ID=your_aws_access_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret_key
# AWS_STORAGE_BUCKET_NAME=your_bucket_name
# AWS_S3_REGION_NAME=us-east-1
