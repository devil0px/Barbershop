# ملف متغيرات البيئة للإنتاج
# انسخ هذا الملف إلى .env وقم بتعديل القيم

# إعدادات Django الأساسية
DEBUG=False
SECRET_KEY=your-super-long-random-secret-key-at-least-50-characters-long

# Database Settings - PostgreSQL for production
DATABASE_URL=postgres://user:password@host:port/database_name

# Email Settings - Use a professional email service
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your_production_email@yourdomain.com
EMAIL_HOST_PASSWORD=your_app_password_here
DEFAULT_FROM_EMAIL=Barber Shop <noreply@yourdomain.com>

# Site Configuration
SITE_DOMAIN=yourdomain.com
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com,.herokuapp.com,.ondigitalocean.app,.railway.app

# Google OAuth Settings - Production credentials
GOOGLE_CLIENT_ID=your_production_google_client_id
GOOGLE_SECRET_KEY=your_production_google_secret_key

# Security Settings
SECURE_SSL_REDIRECT=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True
SECURE_BROWSER_XSS_FILTER=True
SECURE_CONTENT_TYPE_NOSNIFF=True

# CORS Settings
CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# CSRF Settings
CSRF_TRUSTED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Redis Settings (for channels and caching)
REDIS_URL=redis://localhost:6379/1

# Static Files Settings
STATIC_URL=/static/
MEDIA_URL=/media/

# Logging Level
LOG_LEVEL=INFO

# Additional Production Settings
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True
X_FRAME_OPTIONS=DENY

# Heroku specific settings
PORT=8000

# Performance settings
GUNICORN_WORKERS=2
GUNICORN_TIMEOUT=120

# إعدادات الموقع
SITE_NAME=Barber Shop
SITE_DOMAIN=your-domain.com

# إعدادات اختيارية للمراقبة
# SENTRY_DSN=your_sentry_dsn_here

# إعدادات AWS S3 (اختيارية لتخزين الملفات)
# AWS_ACCESS_KEY_ID=your_aws_access_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret_key
# AWS_STORAGE_BUCKET_NAME=your_bucket_name
# AWS_S3_REGION_NAME=us-east-1
